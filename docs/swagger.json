{
    "swagger": "2.0",
    "info": {
        "description": "API for generating and managing binary files from playbooks",
        "title": "Spage API",
        "contact": {},
        "version": "1.0"
    },
    "basePath": "/api",
    "paths": {
        "/binaries": {
            "get": {
                "description": "Get a list of all generated binaries",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "binaries"
                ],
                "summary": "List all binaries",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/web.BinaryResponse"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/web.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/binaries/grouped": {
            "get": {
                "description": "Get a list of binaries grouped by name",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "binaries"
                ],
                "summary": "List grouped binaries",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/web.BinaryGroupResponse"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/web.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/binaries/{id}/download": {
            "get": {
                "description": "Download a specific version of a binary file",
                "produces": [
                    "application/octet-stream"
                ],
                "tags": [
                    "binaries"
                ],
                "summary": "Download specific binary version",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Binary name",
                        "name": "name",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Binary version (with or without 'v' prefix)",
                        "name": "version",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "file"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/web.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/web.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "web.BinaryGroupResponse": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "versions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/web.BinaryResponse"
                    }
                }
            }
        },
        "web.BinaryResponse": {
            "description": "Binary file information",
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "path": {
                    "type": "string"
                },
                "playbook": {
                    "type": "string"
                },
                "updated_at": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
            }
        },
        "web.ErrorResponse": {
            "description": "Error response from the API",
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                }
            }
        }
    }
}